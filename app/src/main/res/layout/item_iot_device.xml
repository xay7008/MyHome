<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/device_item"
    android:background="?android:attr/selectableItemBackground">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did : "
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FD5NHUDiroQ7XZycWMJRuV"
            android:textSize="20dp"
            android:id="@+id/tv_did"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC        : "
            android:textSize="12sp" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="28:37:37:15:8b:1d"
            android:textSize="12sp"
            android:id="@+id/tv_mac"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="订阅 : "
            android:textSize="12sp" />

        <TextView
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:text="是"
            android:textSize="12sp"
            android:id="@+id/tv_subscribed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="绑定 : "
            android:textSize="12sp" />

        <TextView
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:text="是"
            android:textSize="12sp"
            android:id="@+id/tv_bind"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备状态 : "
            android:textSize="12sp" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GizDeviceControlled"
            android:textSize="12sp"
            android:id="@+id/tv_net_status"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="注销 : "
            android:textSize="12sp" />

        <TextView
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:text="是"
            android:textSize="12sp"
            android:id="@+id/tv_disable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="类型 : "
            android:textSize="12sp" />

        <TextView
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:text="是"
            android:textSize="12sp"
            android:id="@+id/tv_lan"/>


    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>